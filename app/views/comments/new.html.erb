<div class="review_content">
  <div class="clearfix">
    <div class="top_review_image">
      <%= attachment_image_tag @review.user, :image, :fill, 80, 80, format: 'jpg', fallback: 'mv.png', :size => '80x80' %>
    </div>
    <div class="top_user_text">
      <div>
        <%= @review.user.name %>
      </div>
      <div>
        <%= @review.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>
  </div>
 <div class="star-position">
   <% if @review.star == 1 %>
     <div class="star-color">★</div>
   <% elsif @review.star == 2 %>
     <div class="star-color">★★</div>
   <% elsif @review.star == 3 %>
     <div class="star-color">★★★</div>
   <% elsif @review.star == 4 %>
     <div class="star-color">★★★★</div>
   <% elsif @review.star == 5 %>
     <div class="star-color">★★★★★</div>
   <% end %>
 </div>
   <%= @review.review %>
   <%= @review.comment_count %>
</div>
<div>
  <% @comments.each do |comment| %>
    <div class="clearfix">
      <div class="top_review_image">
        <%= attachment_image_tag comment.user, :image, :fill, 80, 80, format: 'jpg', fallback: 'mv.png', :size => '80x80' %>
      </div>
      <div class="top_user_text">
        <div>
          <%= comment.user.name %>
        </div>
        <div>
          <%= comment.created_at.strftime('%Y/%m/%d') %>
        </div>
      </div>
    </div>
    <% if comment.spoiler == true %>
      <div class="hidden_box">
        <label for="label-<%=comment.id%>">クリックして表示</label>
        <input type="checkbox" id="label-<%=comment.id%>"/>

          <div class="hidden_show">
            <% if comment.user_id == current_user.id %>
              <%= link_to "削除", movie_review_comment_path(params[:movie_id],@review,comment) %>
            <% end %>
            <%= comment.comment %>
         </div>
       </div>
     <% else %>
       <% if comment.user_id == current_user.id %>
         <%= link_to "削除", movie_review_comment_path(params[:movie_id],@review,comment) %>
       <% end %>
       <%= comment.comment %>
       
     <% end %>
  <% end %>
</div>
<%= form_for @comment,:url => {:action => :create} do |f| %>
  <%= f.text_area :comment %>
  <%= f.check_box :spoiler,{},checked_value = "true",unchecked_value = "false" %>
  <%= f.submit "送信",class: "post_btn" %>
<% end %>

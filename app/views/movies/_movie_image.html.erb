<% if t.movie.release_date <= Time.now && t.movie.release_end_date >= Time.now %>
<div class="example_2">
  <%= link_to movie_path(t.movie.id) do%>
  <p>公開中</p>
  <%=  attachment_image_tag t.movie, :image, :fill, 200, 200, format: 'jpg', fallback: 'mv.png', :size => '200x200'  %>
</div>
<% end %>
<% elsif t.movie.release_date >= Time.now %>
<div class="example">
  <%= link_to movie_path(t.movie.id) do%>
  <p><%= t.movie.release_date %> 公開</p>
  <%=  attachment_image_tag t.movie, :image, :fill, 200, 200, format: 'jpg', fallback: 'mv.png', :size => '200x200'  %>
</div>
<% end %>
<%  else %>
<div>
  <%= link_to movie_path(t.movie.id) do%>
  <%=  attachment_image_tag t.movie, :image, :fill, 200, 200, format: 'jpg', fallback: 'mv.png', :size => '200x200'  %>
</div>
<% end %>
<% end %>

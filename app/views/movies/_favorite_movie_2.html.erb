<div class="favorite_movie_content_3">
  <div>
    <%= link_to movie_path(movie.movie.id) do%>
    <%=  attachment_image_tag movie.movie, :image, :fill, 150, 180, format: 'jpg', fallback: 'mv.png', :size => '150x180'  %>
  </div>
  <div class="favorite_movie_title_3"><h3><%= movie.movie.title %></h3></div>
  <% end %>
  <div class="clearfix show_movie_count">
    <div class="favorite_box_4">
      <i class="fas fa-heart"></i>
      <div><%= movie.movie.favorite_count %></div>
    </div>
    <div class="star_box_3">
      <i class="fas fa-star"></i>
      <div><%= movie.movie.satr_average %></div>
    </div>
    <div class="review_box_4">
      <i class="fas fa-comments"></i>
      <div><%= movie.movie.review_count %></div>
    </div>
  </div>

<div class="like_box">
  <% if t.favorited_by?(current_user) %>
  <% like_id = Like.where(review_id: t.id,user_id: current_user.id) %>
  <%= link_to movie_review_like_path(t.movie,t,like_id), method: :delete,class: "good_link" do %>
  <i class="fas fa-heart">いいね！</i>
  <% end %>
  <% else %>
  <%= link_to "/movies/#{t.movie.id}/reviews/#{t.id}/likes", method: :post do %>
  <i class="fas fa-heart">いいね！</i>
  <% end %>
  <% end %>
  <div class="balloon2-left">
    <P><%= t.like_count %></P>
  </div>
</div>

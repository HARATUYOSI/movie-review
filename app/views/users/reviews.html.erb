<div class="user_show_container clearfix">
  <%= render 'side_bar' %>
  <div class="user_right_container">
    <div class="user_reviews_box clearfix">
      <div class="user_review_headline">
        <h2>投稿一覧</h2>
      </div>
      <% @reviews.each do |review| %>
        <div class="clearfix">
          <div class="time_line_content">
            <div class="clearfix">
              <div class="user_image">
                <%= link_to user_path(review.user.id) do %>
                <%=  attachment_image_tag review.user, :image, :fill, 50, 50, format: 'jpg', fallback: 'mv.png', :size => '50x50'  %>
              </div>
              <div class="user_name">
                <%= review.user.name %>
                <% end %>
                <div>
                  <%= date_format(review.created_at) %>
                </div>
              </div>
            </div>
            <div class="clearfix time_line_review_box">
              <div class="time_line_image">
              <% if review.movie.release_date <= Time.now && review.movie.release_end_date >= Time.now %>
                <div class="example_2">
                  <%= link_to movie_path(review.movie.id) do%>
                  <p>公開中</p>
                  <%=  attachment_image_tag review.movie, :image, :fill, 200, 200, format: 'jpg', fallback: 'mv.png', :size => '200x200'  %>
                </div>
                <% end %>
                <div class="clearfix show_movie_count">
                  <div class="favorite_box_2">
                    <i class="fas fa-heart"></i>
                    <div><%= review.movie.favorite_count %></div>
                  </div>
                  <div class="star_box">
                    <i class="fas fa-star"></i>
                    <div><%= review.movie.satr_average %></div>
                  </div>
                  <div class="review_box_2">
                    <i class="fas fa-comments"></i>
                    <div><%= review.movie.review_count %></div>
                  </div>
                </div>
                </div>
              <% elsif review.movie.release_date >= Time.now %>

                  <div class="example">
                    <%= link_to movie_path(review.movie.id) do%>
                    <p><%= review.movie.release_date %> 公開</p>
                    <%=  attachment_image_tag review.movie, :image, :fill, 200, 200, format: 'jpg', fallback: 'mv.png', :size => '200x200'  %>
                  </div>
                
                  <% end %>
                <div class="clearfix show_movie_count">
                  <div class="favorite_box_2">
                    <i class="fas fa-heart"></i>
                    <div><%= review.movie.favorite_count %></div>
                  </div>
                  <div class="star_box">
                    <i class="fas fa-star"></i>
                    <div><%= review.movie.satr_average %></div>
                  </div>
                  <div class="review_box_2">
                    <i class="fas fa-comments"></i>
                    <div><%= review.movie.review_count %></div>
                  </div>
                </div>
            </div>
                  <% end %>
              <div class="time_line_review">
                <p class="time_line_movie_title"><%= review.movie.title %></p>

                <div class="star-position">
                  <% if review.star == 1 %>
                    <div class="star-color">★</div>
                  <% elsif review.star == 2 %>
                    <div class="star-color">★★</div>
                  <% elsif review.star == 3 %>
                    <div class="star-color">★★★</div>
                  <% elsif review.star == 4 %>
                    <div class="star-color">★★★★</div>
                  <% elsif review.star == 5 %>
                    <div class="star-color">★★★★★</div>
                  <% end %>
                </div>
                <% if review.spoiler == true %>
                <div class="container_1 review_text">
                <div class="top">
                </div>
                <label for="topbtn_<%= review.id %>" class="topbtn_<%= review.id %>">このレビューはネタバレを含みます ≫</label>
                <input id="topbtn_<%= review.id %>" type="radio" name="oo_<%= review.id %>">
                <div class="btm">
                  <div class="review_text">
                      <%= review.review %>
                        </div>

                      </div>
                      <br>

                      <!--container--></div>
                  <% else %>
                  <div class="review_text">
                    <%= review.review %>
                  </div>
                <% end %>

              </div>
            </div>
            <div class="clearfix">
              <div class="like_box">
                <% if review.favorited_by?(current_user) %>
                <%= link_to "いいね！", movie_review_like_path(review.movie,review), method: :delete,class: "good_link" %>
                <% else %>
                <%= link_to "いいね！", "/movies/#{review.movie.id}/reviews/#{review.id}/likes" , method: :post %>
                <% end %>
                <div class="balloon2-left">
                  <P><%= review.like_count %></P>
                </div>
              </div>
              <div class="comment_box">
                <%= link_to "コメントする", "/movies/#{review.movie.id}/reviews/#{review.id}/comments/new"  %>
                <div class="balloon2-left">
                <%= review.comment_count %>
                </div>
              </div>
            </div>

    </div>
  <% end %>
</div>
  </div>
</div>

<div class="user_edit_container">
  <div class="user_edit_headline">
    <h2 class="useredit_headline">プロフィール編集 </h2>
  </div>
  <div class="user_edit_box">
  <% if @user.errors.full_messages %>
    <div class="errors_message"><% @user.errors.full_messages.each do |message| %></div>
    <%= message %>
    <% end %>
  <% end %>

    <%= form_for(@user) do |f| %>
    <div class="field">
　　　<%= f.attachment_field :image %>
<%=  attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpg', fallback: 'mv.png', :size => '100x100'  %>
</div>
      <div class="field">
          <%= f.label :ニックネーム,class: "label_name" %><br />
          <%= f.text_field :name%>
      </div>

      <div class="field">
        <%= f.label :自己紹介,class: "label_name" %><br />
        <%= f.text_field :introduction %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス,class: "label_name" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>



  <div class="actions">
    <%= f.submit "編集", class:"btn btn-primary" %>
  </div>
  <% end %>
</div>
</div>
